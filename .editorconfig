# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

[{Makefile,*.mk}]
indent_style = tab

[*.rs]
indent_style = space
indent_size = 4

[*.yml]
indent_style = space
indent_size = 2
